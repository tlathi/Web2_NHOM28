@using WineShop.Models
@model LoginViewModel
@{
    Layout = "~/Views/Shared/LayoutKhongCoTimKiem.cshtml";
}

<div class="columns-container">
    <div class="container" id="columns">
        <div class="page-content">
            <div class="row">
                <div class="col-sm-6">
                    <div class="box-authentication">
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
                        {
                            <h3>Bạn đã có tài khoản?</h3>
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "")
                            <label for="emmail_login">Địa chỉ Email</label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            <br />
                            <label for="password_login">Mật khẩu</label>
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                        <p class="forgot-pass"><a href="@Url.Action("ForgotPassword")">Bạn quên mật khẩu?</a></p>
                                        <button type="submit" class="button"><i class="fa fa-lock"></i> Đăng nhập</button>
                        }
                        <br />
                        <br />
                        <a href="~/Account/Register" class="button" style="text-decoration:none;"><i class="fa fa-lock"></i> Đăng ký</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
