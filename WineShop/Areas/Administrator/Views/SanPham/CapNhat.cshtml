@model WineShop.Models.SanPham

@{
    ViewBag.Title = "Cập nhật sản phẩm";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<ul class="breadcrumb">
    <li>
        <p>TRANG CẬP NHẬT SẢN PHẨM</p>
    </li>
    <li>
        <b>Chỉnh sửa</b>
    </li>
</ul>
<div class="page-title">
    <a href="@Url.Action("Index", "SanPham")">
        <i class="icon-custom-left"></i>
    </a>
    <h3>Trở về - <span class="semi-bold">TRANG SẢN PHẨM</span></h3>
</div>
@using (Html.BeginForm("CapNhat", "SanPham", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="col-md-6">
        <div class="grid simple vertical green">
            <div class="grid-title no-border">
                <h4>Cập nhật <span class="semi-bold">sản Phẩm</span></h4>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                    <a href="javascript:;" class="remove"></a>
                </div>
            </div>
            <div class="grid-body no-border">
                <div class="row-fluid">
                    <div>
                        <div class="color-bands green"></div>
                        <div class="color-bands purple"></div>
                        <div class="color-bands red"></div>
                        <div class="color-bands blue"></div>
                        <br>
                        <div>
                            @Html.AntiForgeryToken()
                            <table>
                                <tr>
                                    <td width="1000">
                                        <div style="height:500px;">
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            @Html.HiddenFor(model => model.MaSanPham)
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.TenSanPham, htmlAttributes: new { @class = "control-label col-md-6" })
                                                <div class="col-md-10">
                                                    <h1>@Html.EditorFor(model => model.TenSanPham, new { htmlAttributes = new { @class = "form-control" } })</h1>
                                                    @Html.ValidationMessageFor(model => model.TenSanPham, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.NgayNhap, htmlAttributes: new { @class = "control-label col-md-6" })
                                                <div class="col-md-10">
                                                    <h1>@Html.EditorFor(model => model.NgayNhap, new { htmlAttributes = new { @class = "form-control" } })</h1>
                                                    @Html.ValidationMessageFor(model => model.NgayNhap, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.MaLoaiSanPham, htmlAttributes: new { @class = "control-label col-md-6" })
                                                <div class="col-md-10">
                                                    <h1>@Html.DropDownList("MaLoaiSanPham", (IEnumerable<SelectListItem>)ViewBag.LoaiSanPhams, new { htmlAttributes = new { @class = "form-control" } })</h1>
                                                    @Html.ValidationMessageFor(model => model.MaLoaiSanPham, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.MaHangSanXuat, htmlAttributes: new { @class = "control-label col-md-6" })
                                                <div class="col-md-10">
                                                    <h1>@Html.DropDownList("MaHangSanXuat", (IEnumerable<SelectListItem>)ViewBag.HangSanXuats, new { htmlAttributes = new { @class = "form-control" } })</h1>
                                                    @Html.ValidationMessageFor(model => model.MaHangSanXuat, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                @Html.LabelFor(model => model.GiaSanPham, new { @class = "control-label col-md-6" })
                                                <div class="col-md-10">
                                                    <h1>@Html.EditorFor(model => model.GiaSanPham, new { @class = "form-control" })</h1>
                                                    @Html.ValidationMessageFor(model => model.GiaSanPham, "", new { @class = "text-danger" })
                                                </div>
                                            </div>



                                            <div class="form-group">
                                                @Html.LabelFor(model => model.SoLuongTon, htmlAttributes: new { @class = "control-label col-md-6" })
                                                <div class="col-md-10">
                                                    <h1>@Html.EditorFor(model => model.SoLuongTon, new { htmlAttributes = new { @class = "form-control" } })</h1>
                                                    @Html.ValidationMessageFor(model => model.SoLuongTon, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="control-label col-md-12 ">Thêm hình</div>
                                                <div class="col-md-5 no-border">
                                                    <input type="file" id="file" multiple name="upload" value="Duyệt" />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.MoTa, htmlAttributes: new { @class = "control-label col-md-12" })
                                                <div class="col-md-10">
                                                    <div class="">
                                                        <div class="grid-body no-border">
                                                            <textarea id="MoTa" name="MoTa" placeholder="Mô tả về sản phẩm ..." class="form-control" rows="10">@Model.MoTa</textarea>
                                                        </div>
                                                    </div>
                                                    @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <center>
                                            <input type="submit" value="Cập nhật" class="btn btn-default" />
                                        </center>
                                    </td>
                                </tr>

                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="grid simple horizontal red">
            <div class="grid-title ">
                <h4>hình ảnh sản phẩm</h4>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                    <a href="javascript:;" class="remove"></a>
                </div>
            </div>
            <div class="grid-body">
                <div>
                    <h3>chọn để<span class="semi-bold"> xóa</span></h3>
                    <div class="color-bands green"></div>
                    <div class="color-bands purple"></div>
                    <div class="color-bands red"></div>
                    <div class="color-bands blue"></div>
                    <div class="clearfix"></div>
                    <div class="superbox">
                        @foreach (var image in Model.HinhAnhs)
                        {
                            if (image.BiXoa == false)
                            {
                                <div class="superbox-list">
                                    <input type="checkbox" name="GiaTri[]" value="@image.Ma" />
                                    <img src="@Url.Content("~/Images/" + image.TenHinh)" width="150" height="150" class="superbox-img" />
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
