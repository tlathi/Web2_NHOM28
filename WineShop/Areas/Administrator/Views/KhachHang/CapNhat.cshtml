@model WineShop.Models.AspNetUser

@{
    ViewBag.Title = "Cập nhật tài khoản";
}

<ul class="breadcrumb">
    <li>
        <p>TRANG PHÂN QUYỀN</p>
    </li>
    <li>
        <b>Phân quyền</b>
    </li>
</ul>
<div class="page-title">
    <a href="@Url.Action("Index", "KhachHang")">
        <i class="icon-custom-left"></i>
    </a>
    <h3>Trở về - <span class="semi-bold">TRANG DANH SÁCH</span></h3>
</div>

<div class="col-md-6">
    <div class="grid simple horizontal red">
        <div class="grid-title ">
            <h4>Phân quyền</h4>
            <div class="tools">
                <a href="javascript:;" class="collapse"></a>
                </a> <a href="javascript:;" class="remove"></a>
            </div>
        </div>
        <div class="grid-body">
            <div>
                <h3>tên đăng nhập<span class="semi-bold"> @Model.UserName</span></h3>
                <div class="color-bands green"></div>
                <div class="color-bands purple"></div>
                <div class="color-bands red"></div>
                <div class="color-bands blue"></div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)
                        <div class="form-group">
                            <div class="control-label col-md-10">
                                Chọn
                            </div>
                            <div class="col-md-10">
                                @Html.DropDownList("RoleID", (IEnumerable<SelectListItem>)ViewBag.Quyens, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Xác nhận" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@if (Model.LockoutEnabled == false)
{
    <div class="col-md-6">
        <div class="grid simple horizontal white">
                    <br />
                    <a class="remove" href="@Url.Action("PhucHoi", "KhachHang", new { id = Model.Id})">
                        
                        <img src="~/Areas/Administrator/Content/assets/img/Ref.png" width="300" height="300"/>
                    </a>
        </div>
    </div>
}

