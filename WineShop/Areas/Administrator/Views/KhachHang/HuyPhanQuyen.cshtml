@model WineShop.Models.AspNetUser

@{
    ViewBag.Title = "HuyPhanQuyen";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}




<ul class="breadcrumb">
    <li>
        <p>TRANG HỦY QUYỀN</p>
    </li>
    <li>
        <b>Hủy quyền</b>
    </li>
</ul>
<div class="page-title">
    <a href="@Url.Action("Index", "KhachHang")">
        <i class="icon-custom-left"></i>
    </a>
    <h3>Trở về - <span class="semi-bold">TRANG DANH SÁCH</span></h3>
</div>

<div class="col-md-6">
    <div class="grid simple horizontal red">
        <div class="grid-title ">
            <h4>Hủy quyền</h4>
            <div class="tools">
                <a href="javascript:;" class="collapse"></a>
                <a href="javascript:;" class="reload"></a> <a href="javascript:;" class="remove"></a>
            </div>
        </div>
        <div class="grid-body">
            <div>
                <h3>tên đăng nhập<span class="semi-bold"> @Model.UserName</span></h3>
                <div class="color-bands green"></div>
                <div class="color-bands purple"></div>
                <div class="color-bands red"></div>
                <div class="color-bands blue"></div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)
                        <div class="form-group">
                            <h3>hủy quyền   <span class="semi-bold"> @Html.DropDownList("RoleID", (IEnumerable<SelectListItem>)ViewBag.Quyens, new { htmlAttributes = new { @class = "form-control" } })</span></h3>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Xác nhận" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


